{
    "name": "pdf-learning-platform",
    "version": "1.0.0",
    "description": "Minimal PDF learning platform with AI-generated summaries",
    "main": "backend/server.js",
    "scripts": {
        "start": "node backend/server.js",
        "dev": "NODE_ENV=development node backend/server.js",
        "prod": "NODE_ENV=production node backend/server.js",
        "pm2:start": "pm2 start ecosystem.config.js --env production",
        "pm2:stop": "pm2 stop pdf-learning-platform",
        "pm2:restart": "pm2 restart pdf-learning-platform",
        "pm2:logs": "pm2 logs pdf-learning-platform",
        "pm2:monit": "pm2 monit",
        "setup": "npm install && python3 -m venv venv && source venv/bin/activate && pip install pymupdf openai python-dotenv"
    },
    "keywords": [
        "pdf",
        "learning",
        "ai",
        "llamaparse",
        "mongodb"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "llamaindex": "^0.1.0",
        "mongoose": "^8.0.0",
        "multer": "^1.4.5-lts.1",
        "openai": "^4.20.0",
        "pdf-parse": "^2.4.5",
        "slugify": "^1.6.6"
    }
}